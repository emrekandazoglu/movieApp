<div class="row">
	<div class="col">
		<h2>Filmler</h2>
		<a href="/movies/create" class="btn btn-primary mb-3">Yeni Film Ekle</a>

		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Film Adı</th>
						<th>Yıl</th>
						<th>Süre</th>
						<th>Türler</th>
						<th>Oyuncular</th>
						<th>İşlemler</th>
					</tr>
				</thead>
				<tbody>
					<% movies.forEach(movie => { %>
					<tr>
						<td><%= movie.title %></td>
						<td><%= movie.release_year %></td>
						<td><%= movie.duration %> dk</td>
						<td>
							<% movie.genres.forEach(genre => { %>
							<span class="badge bg-secondary"><%= genre.name %></span>
							<% }) %>
						</td>
						<td>
							<% movie.actors.forEach(actor => { %>
							<span class="badge bg-info"><%= actor.name %></span>
							<% }) %>
						</td>
						<td>
							<a
								href="/movies/edit/<%= movie.id %>"
								class="btn btn-sm btn-warning"
								>Düzenle</a
							>
							<form
								action="/movies/delete/<%= movie.id %>"
								method="POST"
								class="d-inline"
							>
								<button
									type="submit"
									class="btn btn-sm btn-danger"
									onclick="return confirm('Silmek istediğinize emin misiniz?')"
								>
									Sil
								</button>
							</form>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
